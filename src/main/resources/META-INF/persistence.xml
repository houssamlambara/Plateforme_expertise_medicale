<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    
    <persistence-unit name="PlatformExpertiseMedicalePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entités JPA -->
        <class>org.platform_expertise_medicle.model.Patient</class>
        <class>org.platform_expertise_medicle.model.User</class>
        <class>org.platform_expertise_medicle.model.Visite</class>
        <class>org.platform_expertise_medicle.model.Consultation</class>
        <class>org.platform_expertise_medicle.model.Crenau</class>
        <class>org.platform_expertise_medicle.model.Infirmier</class>
        <class>org.platform_expertise_medicle.model.MedecinSpecialiste</class>
        <class>org.platform_expertise_medicle.model.MedecinGeneraliste</class>
        <class>org.platform_expertise_medicle.model.SigneVitaux</class>

        <properties>
            <!-- Configuration de la base de données MySQL -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/plateforme_expertise_medicale?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            
            <!-- Configuration Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Pool de connexions -->
            <property name="hibernate.connection.pool_size" value="10"/>
            
            <!-- Cache de second niveau (optionnel) -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
